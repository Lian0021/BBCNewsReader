<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".NewsDetailsActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        app:titleTextColor="@android:color/white"
        android:id="@+id/toolbar_newsdetails" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/news_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            android:textSize="18dp" />
        <TextView
            android:id="@+id/news_detail_pubdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#9b737775"
            android:layout_marginTop="5dp"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/news_detail_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textSize="15sp" />
        <TextView
            android:id="@+id/news_detail_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textColorLink="@color/blue"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/news_detail_guid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:visibility="gone" />
        <TextView
            android:id="@+id/newsdetails_favouritestate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="newsdetails_favouritestate"
            android:textColor="@color/red"
            android:visibility="gone" />
    </LinearLayout>
</LinearLayout>
